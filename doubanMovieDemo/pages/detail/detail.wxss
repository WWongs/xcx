/* pages/detail/detail.wxss */
page{
    width: 100%;
    height: 100%;
}

.detail .bgImg{
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: .1;
}
.container{
    display: flex;
    flex-direction: column;
    width: 600rpx;
    margin: 0 auto;
}
.container .head{
    margin-top: 50rpx;
}
.container .head image{
    display: block;
    width: 100%;
    height: 800rpx;
}
.container .head .title{
    display: block;
    text-align: center;
    font-size: 34rpx;
    color: #444;
    margin-top: 20rpx;
}
.container .head .konw{
    display: flex;
    flex-direction: column;
}
.container .head .konw text{
    font-size: 24rpx;
    color: #888;
    margin-top: 20rpx;
}
.container .body{
    margin-top: 80rpx;
    margin-bottom: 40rpx;
}
.container .body .title{
    display: block;
    font-size: 30rpx;
    margin-bottom: 30rpx;
}
.container .body .content{
    display: block;
    text-indent: 2em;
    font-size: 22rpx;
    color: #666;
    line-height: 38rpx;
}