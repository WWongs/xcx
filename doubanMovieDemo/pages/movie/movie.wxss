/* pages/movie/movie.wxss */
page {
    height: 100%;
    background-color: #f5f5f5;
}

.banner swiper {
    width: 100%;
    height: 450rpx;
}

.banner swiper image {
    display: block;
    width: 100%;
    height: 100%;
}
.toDay, .top250{
    margin-top: 20rpx;
    height: 350rpx;
    background-color: #fff;
}

.toDay .title, .top250 .title{
    display: block;
    width: 100%;
    font-size: 30rpx;
    line-height: 30rpx;
    margin: 10rpx 0;
    padding-top: 10rpx;
    text-align: center;
}
.toDay scroll-view, .top250 scroll-view{
    white-space: nowrap;
    display: flex;
}

.toDay scroll-view .item, .top250 scroll-view .item{
    display: inline-block;
    width: 220rpx;
    margin-right: 10rpx;
}

.toDay scroll-view .item image, .top250 scroll-view .item image{
    display: block;
    width: 100%;
    height: 260rpx;
}

.toDay scroll-view .item text, .top250 scroll-view .item text{
    display: block;
    text-align: center;
    margin: 5rpx 0;
    font-size: 24rpx;    
}
.toDay scroll-view .item .hidden, .top250 scroll-view .item .hidden{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}